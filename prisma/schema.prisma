datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String   // Aqui vai o hash, n√£o a senha real
  role      String   @default("ADMIN") // ADMIN ou EDITOR
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Participante {
  id               Int      @id @default(autoincrement())
  nome             String
  documento        String   @unique
  email            String   @unique
  ddd              String
  telefone         String
  cidade           String
  estado           String
  codigoIbgeCidade Int
  profissao        String
  diasPresenca     String
  createdAt        DateTime @default(now())
  updatedAt DateTime @updatedAt
}
